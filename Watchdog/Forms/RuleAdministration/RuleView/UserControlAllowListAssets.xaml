<local:UserControlCustom
    x:Class="Watchdog.Forms.RuleAdministration.RuleView.UserControlAllowListAssets"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:entity="clr-namespace:Watchdog.Entities"
    xmlns:local="clr-namespace:Watchdog.Forms.Util"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:TypeArguments="entity:Asset"
    mc:Ignorable="d">
    <StackPanel>
        <DataGrid
            x:Name="DgAssets"
            AutoGenerateColumns="False"
            RowEditEnding="DgRowEditEnding">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="0.4*"
                    Binding="{Binding AssetId, Mode=TwoWay}"
                    Header="Asset-ID" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Name, Mode=TwoWay}"
                    Header="Name" />
            </DataGrid.Columns>
            <DataGrid.ContextMenu>
                <ContextMenu>
                    <MenuItem Click="MenuItemDeleteClick" Header="Löschen" />
                </ContextMenu>
            </DataGrid.ContextMenu>
        </DataGrid>
    </StackPanel>
</local:UserControlCustom>
