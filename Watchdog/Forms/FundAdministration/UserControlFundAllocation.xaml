<UserControl
    x:Class="Watchdog.Forms.FundAdministration.UserControlFundAllocation"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Watchdog.Forms.FundAdministration"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <StackPanel>
        <Label
            Name="title"
            FontSize="20"
            FontWeight="Bold" />
        <Grid
            x:Name="AllocationGrid"
            Width="auto"
            Height="auto"
            Margin="0,20,0,20" />
        <Button HorizontalAlignment="Left" Click="ButtonSubmitClick">Bestätigen</Button>
    </StackPanel>
</UserControl>
